<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Cental - Car Rent Website Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,400;0,700;0,900;1,400;1,700;1,900&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
        rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="/vendor/lib/animate/animate.min.css" rel="stylesheet">
    <link href="/vendor/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">


    <!-- Customized Bootstrap Stylesheet -->
    <link href="/vendor/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="/vendor/css/style.css" rel="stylesheet">
</head>

<body>

    <!-- Spinner Start -->
    <div id="spinner"
        class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <!-- Spinner End -->


    <!-- Navbar Start -->
    <%- include('header.ejs'); -%>
        <!-- navbar end -->

        <!-- Header Start -->
        <div class="container-fluid bg-breadcrumb">
            <div class="container text-center py-5" style="max-width: 900px;">
                <h4 class="text-white display-4 mb-4 wow fadeInDown" data-wow-delay="0.1s">Reservation</h4>
                <ol class="breadcrumb d-flex justify-content-center mb-0 wow fadeInDown" data-wow-delay="0.3s">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="#">Pages</a></li>
                    <li class="breadcrumb-item active text-primary">Reservation</li>
                </ol>
            </div>
        </div>
        <!-- Header End -->

        <!-- Reservation Start -->
        <div style="text-align: center;margin-top: 50px;">
            <h1><b>Reservation</b></h1>
        </div>
        <div class="container-fluid overflow-hidden about py-5">

            <div class="container py-5">
                <div class="row g-5">
                    <div class="col-lg-6 fadeInLeft animated" data-animation="fadeInLeft" data-delay="0.2s"
                        style="animation-delay: 0.2s;background-color: lightgray;border-radius: 30px;">
                        <div class=" rounded p-5">
                            <h2 class="text-black mb-4"> <b> CONTINUE CAR RESERVATION </b></h2>
                            <form action="/reservation" method="POST">
                                <div class="row g-3">
                                    <div class="col-12">
                                        <div class="input-group">
                                            <input class="form-control" type="text" placeholder="Your Name"
                                                aria-label="Your Name" name="your_name">

                                            <input class="form-control" type="text" placeholder="Your Email"
                                                aria-label="Your Email" name="your_email">
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <input class="form-control" type="text" placeholder="Car Name"
                                                aria-label="Car Name" name="car_name">
                                    </div>
                                    <div class="col-12">
                                        <div class="input-group">
                                            <div class="d-flex align-items-center bg-light text-body rounded-start p-2">
                                                <span class="fas fa-map-marker-alt"></span> <span class="ms-1">Pick
                                                    Up</span>
                                            </div>
                                            <input class="form-control" type="text"
                                                placeholder="Enter a City or Airport"
                                                aria-label="Enter a City or Airport" name="pick_up">
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <a href="#" class="text-start text-black d-block mb-2">Need a
                                            different drop-off location?</a>
                                        <div class="input-group">
                                            <div class="d-flex align-items-center bg-light text-body rounded-start p-2">
                                                <span class="fas fa-map-marker-alt"></span><span class="ms-1">Drop
                                                    off</span>
                                            </div>
                                            <input class="form-control" type="text"
                                                placeholder="Enter a City or Airport"
                                                aria-label="Enter a City or Airport" name="drop_off">
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="input-group">
                                            <div class="d-flex align-items-center bg-light text-body rounded-start p-2">
                                                <span class="fas fa-calendar-alt"></span><span class="ms-1">Pick
                                                    Up</span>
                                            </div>
                                            <input class="form-control" type="date" name="pick_up_date">
                                            <input class="form-control" type="time" name="pick_up_time">
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="input-group">
                                            <div class="d-flex align-items-center bg-light text-body rounded-start p-2">
                                                <span class="fas fa-calendar-alt"></span><span class="ms-1">Drop
                                                    off</span>
                                            </div>
                                            <input class="form-control" type="date" name="drop_off_date">
                                            <input class="form-control" type="time" name="drop_off_time">
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="input-group">
                                            <button type="submit"
                                            class="btn btn-primary rounded-pill w-100">Book Now</button>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="col-xl-6 wow fadeInRight" data-wow-delay="0.2s">
                        <div class="about-img">
                            <div class="img-1">
                                <img src="/vendor/img/about-img.jpg" class="img-fluid rounded h-100 w-100" alt="">
                            </div>
                            <div class="img-2">
                                <img src="/vendor/img/about-img-1.jpg" class="img-fluid rounded w-100" alt="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Reservation End -->

        <!--Footer And Copyright Start-->
        <%- include('footer.ejs'); -%>
            <!--Footer And Copyright End-->


            <!-- Back to Top -->
            <a href="#" class="btn btn-secondary btn-lg-square rounded-circle back-to-top"><i
                    class="fa fa-arrow-up"></i></a>


            <!-- JavaScript Libraries -->
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
            <script src="/vendor/lib/wow/wow.min.js"></script>
            <script src="/vendor/lib/easing/easing.min.js"></script>
            <script src="/vendor/lib/waypoints/waypoints.min.js"></script>
            <script src="/vendor/lib/counterup/counterup.min.js"></script>
            <script src="/vendor/lib/owlcarousel/owl.carousel.min.js"></script>


            <!-- Template Javascript -->
            <script src="/vendor/js/main.js"></script>
</body>

</html>